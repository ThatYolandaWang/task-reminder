{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "task-reminder",
  "version": "0.1.0",
  "identifier": "com.task-reminder.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "高效习惯养成计划",
        "width": 600,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true,
        "url": "#/main"
      },
      {
        "label": "settings",
        "title": "设置",
        "width": 300,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "url": "#/settings"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
